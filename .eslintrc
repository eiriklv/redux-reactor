{
  "extends": "eslint-config-airbnb",
  "env": {
    "mocha": true,
    "browser": true,
    "node": true,
    "es6": true
  },
  "ecmaVersion": 7,
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "modules": true
  },
  "globals": {
    "expect": true
  },
  "rules": {
    "padded-blocks": 0,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-expressions": 0
  }
}
